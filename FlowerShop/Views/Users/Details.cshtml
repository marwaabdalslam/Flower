@model FlowerShop.Models.User

@{
    ViewData["Title"] = "تفاصيل المستخدم";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">البريد الإلكتروني</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">الهاتف</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">الدور</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
    <a asp-action="Index" class="btn btn-secondary">رجوع للقائمة</a>
</p>