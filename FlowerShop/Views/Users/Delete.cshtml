@model FlowerShop.Models.User

@{
    ViewData["Title"] = "حذف المستخدم";
}

<h2>@ViewData["Title"]</h2>

<h4>هل أنت متأكد أنك تريد حذف المستخدم التالي؟</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">البريد الإلكتروني</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">الهاتف</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">الدور</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>