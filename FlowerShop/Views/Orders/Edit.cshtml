@model FlowerShop.Models.Order

@{
    ViewData["Title"] = "تعديل الطلب";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UserId">اسم المستخدم (ID)</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalAmount">المبلغ الكلي</label>
        <input asp-for="TotalAmount" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">الحالة</label>
        <select asp-for="Status" class="form-control">
            <option value="pending">قيد الانتظار</option>
            <option value="paid">مدفوع</option>
            <option value="shipped">تم الشحن</option>
            <option value="delivered">تم التسليم</option>
            <option value="cancelled">ملغي</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedAt">تاريخ الإنشاء</label>
        <input asp-for="CreatedAt" type="date" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">تحديث</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}