@model IEnumerable<FlowerShop.Models.Order>

@{
    ViewData["Title"] = "قائمة الطلبات";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة طلب جديد</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>رقم الطلب</th>
            <th>اسم المستخدم</th>
            <th>المبلغ الكلي</th>
            <th>الحالة</th>
            <th>تاريخ الإنشاء</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td> <!-- لاحقاً يمكن ربط اسم المستخدم بدل Id -->
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">تفاصيل</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>