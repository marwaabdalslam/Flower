@model FlowerShop.Models.Order

@{
    ViewData["Title"] = "حذف الطلب";
}

<h2>@ViewData["Title"]</h2>

<h4>هل أنت متأكد أنك تريد حذف الطلب رقم @Model.Id؟</h4>

<dl class="row">
    <dt class="col-sm-3">اسم المستخدم</dt>
    <dd class="col-sm-9">@Model.UserId</dd>

    <dt class="col-sm-3">المبلغ الكلي</dt>
    <dd class="col-sm-9">@Model.TotalAmount</dd>

    <dt class="col-sm-3">الحالة</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">تاريخ الإنشاء</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>